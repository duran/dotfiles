#!/bin/sh
set -o errexit
set -o nounset
set -o xtrace
# aka set -eux

read -p 'Please introduce a name.' GIT_AUTHOR_NAME
read -p 'Please introduce an email.' GIT_AUTHOR_EMAIL
read -p 'Please introduce a date (example 2005-04-07T22:13:13).' GIT_AUTHOR_DATE
GIT_COMMITTER_NAME="$GIT_AUTHOR_NAME"
GIT_COMMITTER_EMAIL="$GIT_AUTHOR_EMAIL"
GIT_COMMITTER_DATE="$GIT_COMMITTER_DATE"

env \
GIT_AUTHOR_NAME="$GIT_AUTHOR_NAME" \
GIT_AUTHOR_EMAIL="$GIT_AUTHOR_EMAIL" \
GIT_AUTHOR_DATE="$GIT_AUTHOR_DATE" \
GIT_COMMITTER_NAME="$GIT_COMMITTER_NAME" \
GIT_COMMITTER_EMAIL="$GIT_COMMITTER_EMAIL" \
GIT_COMMITTER_DATE="$GIT_COMMITTER_DATE" \
git commit "$@"
