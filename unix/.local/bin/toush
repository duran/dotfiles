#!/bin/sh
# TODO: check if $1 exist

if test -e "$1"; then
    >&2 echo File exist alredy, aborting...
    exit 17
fi

if test "$1"; then
> "$1" cat - <<< '#!/bin/sh
set -o errexit
set -o nounset
set -o xtrace
# aka set -eux

'
chmod +x "$1"
"$VISUAL" "$1"
else
>&2 echo Please add path to a file
fi
