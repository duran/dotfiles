[Default Applications]
###########
# Special #
###########
# Directories
inode/directory=lf.desktop
# Default terminal
x-scheme-handler/terminal=terminal.desktop
###############
# Local files #
###############
# Dumped everything from the official MIME handlers to here: https://docs.w3cub.com/http/basics_of_http/mime_types/complete_list_of_mime_types/
# Also take a look at: https://developer.mozilla.org/en-US/docs/Web/HTTP/Basics_of_HTTP/MIME_types/Common_types
# Binaries
application/octet-stream=pager.desktop
# Plain text
text/plain=pager.desktop
application/xml=pager.desktop
application/json=pager.desktop
application/ecmascript=pager.desktop
application/javascript=pager.desktop
application/typescript=pager.desktop
application/x-shellscript=pager.desktop
text/css=pager.desktop
text/csv=pager.desktop
text/markdown=pager.desktop
text/calendar=pager.desktop
# Webpages
text/html=firefox-esr.desktop
application/x-extension-htm=firefox-esr.desktop
application/x-extension-html=firefox-esr.desktop
application/x-extension-shtml=firefox-esr.desktop
application/x-extension-xhtml=firefox-esr.desktop
application/x-extension-xht=firefox-esr.desktop
application/xhtml+xml=firefox-esr.desktop
# Documents (containers)
application/pdf=org.pwmt.zathura.desktop
application/epub+zip=org.pwmt.zathura.desktop
application/postscript=org.pwmt.zathura.desktop
image/vnd.djvu=org.pwmt.zathura.desktop
# Image
image/bmp=imv-dir.desktop
image/gif=imv-dir.desktop
image/jpeg=imv-dir.desktop
image/png=imv-dir.desktop
image/svg+xml=imv-dir.desktop
image/tiff=imv-dir.desktop
image/webp=imv-dir.desktop
image/x-icon=imv-dir.desktop
# Audio/Video
audio/aac=vlc.desktop
audio/ogg=vlc.desktop
audio/wav=vlc.desktop
audio/webm=vlc.desktop
audio/x-midi=vlc.desktop
video/3gpp2=vlc.desktop
video/3gpp=vlc.desktop
video/mpeg=vlc.desktop
video/ogg=vlc.desktop
video/webm=vlc.desktop
video/x-msvideo=vlc.desktop
video/mp4=vlc.desktop
# Compressed files
application/x-compressed-tar=tar-fzf
########
# URIs #
########
# Web
x-scheme-handler/http=firefox-esr.desktop
x-scheme-handler/https=firefox-esr.desktop
x-scheme-handler/ftp=firefox-esr.desktop
x-scheme-handler/chrome=firefox-esr.desktop
x-scheme-handler/qute=qutebrowser.desktop

