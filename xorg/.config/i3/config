# More info in
# http://i3wm.org/docs/userguide.html

# Set Mod key
# Mod1 = Alt
# Mod2 = Num Lock
# Mod3 = Hyper
# Mod4 = Super
# Mod5 = Mode Swith

set $mod Mod4

# Workspace


# For appearance and visual components
include ~/.config/i3/chrome
# For things related to managing windows
include ~/.config/i3/window_manager
# For things related to external programs
include ~/.config/i3/launcher
